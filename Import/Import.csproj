<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Files\NASDAQ.csv" />
    <None Remove="Files\NASDAQ.txt" />
    <None Remove="Files\PortfolioValueHistory\PortfolioValueHistory.csv" />
    <None Remove="Files\PortfolioValueHistory\PortfolioValueHistory.txt" />
    <None Remove="Files\Stock\Stock.csv" />
    <None Remove="Files\Stock\Stock.txt" />
    <None Remove="Files\Transaction\Transaction.csv" />
    <None Remove="Files\Transaction\Transaction.txt" />
    <None Remove="Files\UserPortfolio\UserPortfolio.csv" />
    <None Remove="Files\UserPortfolio\UserPortfolio.txt" />
    <None Remove="Files\User\User.csv" />
    <None Remove="Files\User\User.txt" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Configs\Config.json" />
    <EmbeddedResource Include="Files\PortfolioValueHistory\PortfolioValueHistory.csv" />
    <EmbeddedResource Include="Files\PortfolioValueHistory\PortfolioValueHistory.txt" />
    <EmbeddedResource Include="Files\Stock\Stock.csv" />
    <EmbeddedResource Include="Files\Stock\Stock.txt" />
    <EmbeddedResource Include="Files\Transaction\Transaction.csv" />
    <EmbeddedResource Include="Files\Transaction\Transaction.txt" />
    <EmbeddedResource Include="Files\UserPortfolio\UserPortfolio.csv" />
    <EmbeddedResource Include="Files\UserPortfolio\UserPortfolio.txt" />
    <EmbeddedResource Include="Files\User\User.csv" />
    <EmbeddedResource Include="Files\User\User.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.3" />
    <PackageReference Include="MySql.Data" Version="9.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Data.SqlClient" Version="4.9.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Resources\Labels.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Labels.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Resources\Labels.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Labels.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

</Project>
